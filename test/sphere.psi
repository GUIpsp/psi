def uniformOnUnitSphere(){
	return sample(infer((){
		x := uniform(-1,1);
		y := uniform(-1,1);
		z := uniform(-1,1);
		cobserve(x^2+y^2+z^2,1); // TODO: gobserve
		return (x,y,z);
	}));
}
def main(){
	pts := array(4,(0,0,0));
	for i in [0..4){
		pts[i]=uniformOnUnitSphere();
	}
	return pts;
}

